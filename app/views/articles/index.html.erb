<p id="notice"><%= notice %></p>

<h3 style="margin: 30px 0px">Listing Articles</h3>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content Textarea</th>
      <th>Description wysihtml5<br>"this field is <br>not working ok"</th>
      <th>Select Field</th>
      <th>Boolean</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= editable article, :title %></td>
        <td><%= editable article, :content, type: :textarea %></td>
        <td><%= editable article, :description, type: :wysihtml5 %></td>
        <td><%= editable article, :select_something, type: :select, data: { source: ['iPhone', 'iPad', 'MacBook'] } %></td>
        <td><%= editable article, :is_published, type: :select, data: { source: ['Active', 'Disabled'] } %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

